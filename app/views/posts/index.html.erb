<div class="container">
  <h1>Jacky's Blog</h1>

  <%= link_to "Create a new post", new_post_path, class: "btn btn-primary" %>

  <% @posts.each do |post| %>
    <div class="panel panel-default" id= "<%= dom_id(post) %>">
      <div class="panel-heading">Title: <%= post.title %></div>
      <div class="panel-body">
      <p>Content:</p>
      <br>
      <%= post.body %>
      </div>   
      <div class="panel-footer">Category: <%= post.category%> </div>
      <% if post.anger? %>
        <div class="panel-footer" id="madman"> This is an angry post. </div> 
      <% end %> 
    </div>
    <p>
    <%= link_to "Show", post %> &nbsp;           
    <%= link_to "Edit", edit_post_path(post) %> &nbsp;
    <%= link_to "Delete", post, method: :delete, data: {confirm: "Are you sure?"}  %>
    </p>        
  <% end %>
</div>